#!/command/with-contenv bash
#--------------------------------------------------
# Script: 04-scheduling
# Description: Configures the logging settings for scheduled tasks (cron jobs)
# in the container environment.
#--------------------------------------------------

# Enable strict mode
set -euo pipefail
IFS=$'\n\t'

#--------------------------------------------------
# Configuration
#--------------------------------------------------

# Scheduling log settings
SCHEDULING_LOG_TYPE=${SCHEDULING_LOG_TYPE:-"FILE"}
SCHEDULING_LOG_LOCATION=${SCHEDULING_LOG_LOCATION:-"/var/log/cron/"}
SCHEDULING_LOG_LEVEL=${SCHEDULING_LOG_LEVEL:-"8"}
